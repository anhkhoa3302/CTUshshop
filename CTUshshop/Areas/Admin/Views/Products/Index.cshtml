@model IEnumerable<CTUshshop.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Quản lý sản phẩm</h1>

<table class="table" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" title="Edit"><i class="fa-solid fa-pen"></i></a> |
                <a asp-action="Details" asp-route-id="@item.Id" title="Details"><i class="fa-solid fa-info"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id" title="Delete"><i class="fa-solid fa-trash-can"></i></a> |
                @if (item.Status == 1)
                {
                    <i class="fa-solid fa-eye"></i>
                }
                else if (item.Status == 0)
                {
                    <i class="fa-solid fa-eye-slash"></i>
                }
            </td>
        </tr>
}
    </tbody>
</table>
