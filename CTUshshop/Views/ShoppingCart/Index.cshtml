@model List<CTUshshop.Models.CartItem>;

@{
    ViewData["Title"] = "Giỏ Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="~/Views/Shared/_HeroPartial.cshtml" />
<partial name="~/Views/Shared/_BreadcrumbPartial.cshtml" />

<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        @if (Model.Count > 0)
        {
            double total = 0;
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th class="shoping__product">Products</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cartitem in Model)
                                {
                                    var thanhtien = cartitem.Quantity * cartitem.Product.Price;
                                    total += thanhtien;
                                    var imgUrl = "/files/" + cartitem.UserName + "/images/";
                                    foreach (var img in cartitem.ProductImg)
                                    {
                                        imgUrl += img.Img;
                                        break;
                                    }
                                    <tr>
                                        <td class="shoping__cart__item">
                                            <img src="@imgUrl" alt="" style="width:100px; height:100px;">
                                            <h5>@cartitem.Product.Title</h5>
                                        </td>
                                        <td class="shoping__cart__price">
                                            @cartitem.Product.Price.ToString("#,###.#") &nbsp;<i class="fa-sharp fa-solid fa-dong-sign"></i>
                                        </td>
                                        <td class="shoping__cart__quantity">
                                            <div class="quantity">
                                                <div class="pro-qty">
                                                    <input asp-for="@cartitem.Quantity" id="@($"quantity-{cartitem.Product.Id}")" />
                                                </div>
                                            </div>
                                        </td>
                                        <td class="shoping__cart__total">
                                            @(thanhtien.ToString("#,###.#"))&nbsp;<i class="fa-sharp fa-solid fa-dong-sign"></i>
                                        </td>
                                        <td class="shoping__cart__item__close">
                                            <button class="btn btn-success updatecartitem"
                                                    data-productid="@cartitem.Product.Id">
                                                Cập nhật
                                            </button>

                                        </td>
                                        <td class="shoping__cart__item__close">
                                            <a asp-route="removecart" asp-route-productid="@cartitem.Product.Id"
                                               class="btn btn-danger">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__btns">
                        <a asp-controller="Products" asp-action="Index" asp-area="" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping__checkout">
                        <h5>Cart Total</h5>
                        <ul>
                            <li>Total <span>>@(total.ToString("#,##.##"))&nbsp;<i class="fa-sharp fa-solid fa-dong-sign"></i></span></li>
                        </ul>
                        <a asp-area="" asp-controller="Orders" asp-action="Index" class="primary-btn">CHECKOUT</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row pb-lg-5">
                <div class="col-lg w-100 d-flex justify-content-center">
                    <h1>GIỎ HÀNG TRỐNG</h1>
                </div>
                
                
            </div>
            <div class="row pb-lg-5">
                <div class="col-lg  w-100 d-flex justify-content-center">
                    <div class="shoping__cart__btns">
                        <a asp-controller="Products" asp-action="Index" asp-area="" class="primary-btn cart-btn">TIẾP TỤC SHOPPING</a>
                    </div>
                </div>
            </div>
        }

    </div>
</section>
<!-- Shoping Cart Section End -->

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".updatecartitem").click(function (event) {
                event.preventDefault();
                var productid = $(this).attr("data-productid");
                var quantity = $("#quantity-" + productid).val();
                $.ajax({
                    type: "POST",
                    url:"@Url.RouteUrl("updatecart")",
                    data: {
                        productid: productid,
                        quantity:quantity
                    },
                    success: function (result) {
                        window.location.href = "@Url.RouteUrl("cart")";
                    }
                });
            });
        });
    </script>
}