@{
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="product__pagination d-flex justify-content-center">
    @if (pager.TotalPages > 0)
    {
        @if (pager.CurrentPage > 1)
        {
            <a asp-controller="Products" asp-action="Index" asp-route-pg="1" asp-route-category="@ViewBag.CatBasedList"><i class="fa-solid fa-angles-left"></i></a>
            <a asp-controller="Products" asp-action="Index" asp-route-pg="@(pager.CurrentPage - 1)" asp-route-category="@ViewBag.CatBasedList"><i class="fa-solid fa-angle-left"></i></a>
        }


        @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
        {
            if (pge == pager.CurrentPage)
            {
                <a class="active" asp-controller="Products" asp-action="Index" asp-route-pg="@pge" asp-route-category="@ViewBag.CatBasedList">@pge</a>
            }
            else
            {
                <a asp-controller="Products" asp-action="Index" asp-route-pg="@pge" asp-route-category="@ViewBag.CatBasedList">@pge</a>
            }
        }


        @if (pager.CurrentPage < pager.TotalPages)
        {
            <a asp-controller="Products" asp-action="Index" asp-route-pg="@(pager.CurrentPage+1)" asp-route-category="@ViewBag.CatBasedList"><i class="fa-solid fa-angle-right"></i></a>
            <a asp-controller="Products" asp-action="Index" asp-route-pg="@(pager.TotalPages)" asp-route-category="@ViewBag.CatBasedList"><i class="fa-solid fa-angles-right"></i></a>
        }
    }
</div>


