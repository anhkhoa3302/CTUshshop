
<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Categories</span>
                    </div>
                    <ul style="display: none;">
                        @{ var catList = ViewBag.Categories; }
                        @foreach (var cat in catList)
                        {
                            <li><a asp-area="" asp-controller="Products" asp-action="Index" asp-route-category="@cat.Id">@cat.Title</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg">
                <div class="hero__search">
                    <div class="hero__search__form w-100">
                        <form asp-area="" asp-controller="Products" asp-action="Index">
                            <div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>
                            </div>
                            
                            <input name="text" type="text" placeholder="What do yo u need?">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>
                    @*<div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+65 11.188.888</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>*@
                </div>
            </div>
        </div>
    </div>
</section>
